<%- include('partials/head', {titulo: 'Register', stylesheet: 'register'}) %>

<body>
  <form action="/" method="POST" enctype="multipart/form-data">
    <section class="form-register">
      <div class="ubicacion-logo">
        <a href="/"><img src="/img/logoDDH.png" alt="logoDDH" /></a>
      </div>
      <h4>REGISTER BY EMAIL</h4>

      <% if (locals.errors && errors.name) { %>
        <div class="text-danger">
          <%= errors.name.msg %>
        </div>
        <% } %>
        <!--  div para mostrar errores de la vista -->
        <div class="errors">
          <ul> </ul>
        </div>

        <input class="controls-register" type="text" name="name" id="name" placeholder="Your Name*" <% if (locals.inputDataUser) { %> value="<%= locals.inputDataUser.name %>" 
        <% } %>
        />

        <% if (locals.errors && errors.lastName) { %>
          <div class="text-danger">
            <%= errors.lastName.msg %>
          </div>
          <% } %>

      <input class="controls-register" type="text" name="lastName" id="lastName" placeholder="Last Name*" <% if (locals.inputDataUser) { %> value="<%= locals.inputDataUser.lastName %>" 
      <% } %>
      />

      <% if (locals.errors && errors.email) { %>
        <div class="text-danger">
          <%= errors.email.msg %>
        </div>
        <% } %>
      <input class="controls-register" type="text" name="email" id="correo" placeholder="Email address*" <% if (locals.inputDataUser) { %> value="<%= locals.inputDataUser.email %>" 
      <% } %>
      />
      <% if (locals.errors && errors.password) { %>
        <div class="text-danger">
          <%= errors.password.msg %>
        </div>
        <% } %>
      <input class="controls-register" type="password" name="password" id="password-1" placeholder="password*" />
      <input class="controls-register" type="password" name="passwordRepeat" id="passwordRepeat"
        placeholder="Password confirmation*" />

      <div class="controls-login">
          <label>
            <h5>Choose your purpose*</h5>
          </label>
          <label><input type="radio" name="rol" <% if (locals.inputDataUser && locals.inputDataUser.rol == "vendedor") { %> checked 
            <% } %> value="vendedor"> &nbspSell</label>
          <label><input type="radio" name="rol" <% if (locals.inputDataUser && locals.inputDataUser.rol == "cliente") { %> checked 
            <% } %> value="cliente"> &nbspBuy</label>
      </div>
      
      <% if (locals.errors && errors.avatar) { %>
        <div class="text-danger">
          <%= errors.avatar.msg %>
        </div>
        <% } %>

      <div class="controls-login">
          <label>Profile Image</label>
          <label class="label-file botons2">
            Upload File<input class="texto-oculto" type="file" name="avatar" id="avatar">
          </label>
      </div>

      <div class="terms-use">
        <input type="checkbox" name="terms-use" placeholder="terms-use" > I agree to comply with the DDH <strong>Privacy Policy</strong> and <a
          href="#">Terms of Use.</a></input>
      </div>
      <button class="botons" type="submit"> REGISTER</button>

      <p class="log-in-now"><a href="/login">Log In Now</a></p>
      <p class="help">Need help with registration?</p>

      <div class="contenedor1">
        <nav class="contenedor2">
          <p class="Support"><a href="#">DDH Support</a></p>
          <i class="fa-solid fa-grip-lines"></i>
          <p class="FAQ"><a href="#">FAQ</a></p>
        </nav>
      </div>

      <footer class="pie-de-pagina">
        <p>Copyright Â© 2022 DJI All Rights Reserved.</p>
        <p>
          <a href="#"> Privacy Policy</a><a href="#"> Terms of Use Site Map</a>
          <a href="#"> Cookie Preferences.</a>
        </p>
        <p>
          Should you have any questions, <a href="#"> click here </a> to contact
          our dedicated customer support team.
        </p>
      </footer>
    </section>
  </form>
  <script src="/js/register.js"></script>
</body>

</html>