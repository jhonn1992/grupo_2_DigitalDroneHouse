<%- include('partials/head', {titulo: 'Edit Profile', stylesheet: 'userEdit'}) %>

<body>
  <form action="/user/edit/<%= user.user_id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <section class="form-register">
      <div class="ubicacion-logo">
        <a href="/"><img src="/img/logoDDH.png" alt="logoDDH" /></a>
      </div>
      <h4>REGISTER BY EMAIL</h4>

      <input class="controls-register" type="text" name="name" id="name" placeholder="<%= user.name %>" value="<%= user.name %>" required/>

      <input class="controls-register" type="text" name="lastName" id="lastName" placeholder="Last Name*" value="<%= user.lastName %>" required/>

      <input class="controls-register" type="email" name="email" id="correo" placeholder="Email address*" value="<%= user.email %>" required/>

      <input class="controls-register" type="password" name="password" id="password-1" placeholder="password*" required
        minlength="6" />
      <input class="controls-register" type="password" name="passwordRepeat" id="passwordRepeat"
        placeholder="Enter password again*" required/>

      <div class="controls-login">
          <label>
            <h5>Choose your purpose*</h5>
          </label>
          <label><input type="radio" name="rol" value="vendedor" <% if (user.rol == "vendedor") {%> checked <% } %>  > &nbspSell</label>
          <label><input type="radio" name="rol" value="cliente" <% if (user.rol == "cliente") {%> checked <% } %>> &nbspBuy</label>
      </div>
      
      <div class="controls-login">
          <label>Profile Image</label>
          <label class="label-file botons2">
            Upload File<input class="texto-oculto" type="file" name="avatar" id="avatar" >
          </label>
      </div>
      <input class="texto-oculto" type="text" name="image_default" id="reference" value="<%=user.avatar %>">

      <div class="terms-use">
        <input type="checkbox" name="terms-use" placeholder="terms-use" required> I agree to comply with the DDH <strong>Privacy Policy</strong> and <a
          href="#">Terms of Use.</a></input>
      </div>
      <button class="botons" type="submit"> UPLOAD PROFILE</button>


      <div class="contenedor1">
        <nav class="contenedor2">
          <p class="Support"><a href="#">DDH Support</a></p>
          <p class="FAQ"><a href="#">FAQ</a></p>
        </nav>
      </div>

      <footer class="pie-de-pagina">
        <p>Copyright Â© 2022 DJI All Rights Reserved.</p>
        <p>
          <a href="#"> Privacy Policy</a><a href="#"> Terms of Use Site Map</a>
          <a href="#"> Cookie Preferences.</a>
        </p>
        <p>
          Should you have any questions, <a href="#"> click here </a> to contact
          our dedicated customer support team.
        </p>
      </footer>
    </section>
  </form>
</body>

</html>